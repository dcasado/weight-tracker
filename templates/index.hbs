{{#*inline "content"}}
<script>
    let userId = localStorage.getItem("userId");
    if (userId !== null) {
        window.location.replace("/chart/" + userId)
    }
</script>
<div id="users-div">
    <h1>Who are you?</h1>
    <div id="user-inputs">
        {{#each users}}
        <input type="button" value="{{name}}" onclick="goToChart({{id}})" />
        {{/each}}
    </div>
</div>
<script>
    function goToChart(id) {
        localStorage.setItem("userId", id);
        window.location.href = "/chart/" + id;
    }
</script>
{{/inline}}
{{> base}}
